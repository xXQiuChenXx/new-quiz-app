<svg xmlns="http://www.w3.org/2000/svg" width="800" height="450" viewBox="0 0 800 450">
  <!-- Background -->
  <rect width="800" height="450" fill="#f8fafc" />
  
  <!-- Header -->
  <rect x="0" y="0" width="800" height="60" fill="#0f172a" />
  <text x="30" y="38" font-family="Arial" font-size="24" font-weight="bold" fill="white">Sistem Kuiz</text>
  
  <!-- Main Content -->
  <rect x="50" y="90" width="700" height="330" rx="8" ry="8" fill="white" stroke="#e2e8f0" stroke-width="2" />
  
  <!-- Quiz Categories -->
  <text x="70" y="120" font-family="Arial" font-size="20" font-weight="bold" fill="#1e293b">Kategori Kuiz</text>
  
  <!-- Category Cards -->
  <g>
    <!-- Matematik Card -->
    <rect x="70" y="140" width="200" height="120" rx="6" ry="6" fill="white" stroke="#cbd5e1" stroke-width="2" />
    <text x="90" y="170" font-family="Arial" font-size="18" font-weight="bold" fill="#334155">Matematik</text>
    <rect x="90" y="185" width="160" height="25" rx="4" ry="4" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="100" y="203" font-family="Arial" font-size="14" fill="#64748b">Algebra</text>
    <rect x="90" y="215" width="160" height="25" rx="4" ry="4" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="100" y="233" font-family="Arial" font-size="14" fill="#64748b">Geometri</text>
  </g>
  
  <g>
    <!-- Falsafah Card -->
    <rect x="290" y="140" width="200" height="120" rx="6" ry="6" fill="white" stroke="#cbd5e1" stroke-width="2" />
    <text x="310" y="170" font-family="Arial" font-size="18" font-weight="bold" fill="#334155">Falsafah</text>
    <rect x="310" y="185" width="160" height="25" rx="4" ry="4" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="320" y="203" font-family="Arial" font-size="14" fill="#64748b">Metafizik</text>
    <rect x="310" y="215" width="160" height="25" rx="4" ry="4" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="320" y="233" font-family="Arial" font-size="14" fill="#64748b">Epistemologi</text>
  </g>
  
  <g>
    <!-- Quiz Interface Preview -->
    <rect x="510" y="140" width="240" height="260" rx="6" ry="6" fill="white" stroke="#cbd5e1" stroke-width="2" />
    <text x="530" y="170" font-family="Arial" font-size="16" font-weight="bold" fill="#334155">Paparan Kuiz</text>
    
    <!-- Question -->
    <rect x="530" y="185" width="200" height="60" rx="4" ry="4" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="540" y="210" font-family="Arial" font-size="14" fill="#334155">Apakah definisi falsafah?</text>
    
    <!-- Options -->
    <rect x="530" y="255" width="200" height="30" rx="4" ry="4" fill="white" stroke="#cbd5e1" stroke-width="1" />
    <text x="540" y="275" font-family="Arial" font-size="14" fill="#64748b">A. Cinta kepada kebijaksanaan</text>
    
    <rect x="530" y="290" width="200" height="30" rx="4" ry="4" fill="#dbeafe" stroke="#60a5fa" stroke-width="2" />
    <text x="540" y="310" font-family="Arial" font-size="14" fill="#1e40af">B. Kajian tentang alam</text>
    
    <rect x="530" y="325" width="200" height="30" rx="4" ry="4" fill="white" stroke="#cbd5e1" stroke-width="1" />
    <text x="540" y="345" font-family="Arial" font-size="14" fill="#64748b">C. Seni berfikir</text>
    
    <!-- Button -->
    <rect x="530" y="365" width="120" height="35" rx="4" ry="4" fill="#2563eb" />
    <text x="550" y="387" font-family="Arial" font-size="14" font-weight="bold" fill="white">Semak Jawapan</text>
  </g>
  
  <!-- Mode Selector -->
  <g>
    <rect x="70" y="280" width="420" height="50" rx="6" ry="6" fill="#f8fafc" stroke="#cbd5e1" stroke-width="2" />
    <text x="90" y="310" font-family="Arial" font-size="14" font-weight="bold" fill="#334155">Mod:</text>
    
    <rect x="140" y="290" width="100" height="30" rx="15" ry="15" fill="#2563eb" />
    <text x="155" y="310" font-family="Arial" font-size="14" font-weight="bold" fill="white">Berurutan</text>
    
    <rect x="250" y="290" width="100" height="30" rx="15" ry="15" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="275" y="310" font-family="Arial" font-size="14" fill="#64748b">Rawak</text>
    
    <rect x="360" y="290" width="100" height="30" rx="15" ry="15" fill="#f1f5f9" stroke="#cbd5e1" stroke-width="1" />
    <text x="370" y="310" font-family="Arial" font-size="14" fill="#64748b">Soalan Salah</text>
  </g>
  
  <!-- Statistics Panel -->
  <g>
    <rect x="70" y="340" width="420" height="80" rx="6" ry="6" fill="#f8fafc" stroke="#cbd5e1" stroke-width="2" />
    <text x="90" y="365" font-family="Arial" font-size="14" font-weight="bold" fill="#334155">Statistik:</text>
    
    <text x="90" y="390" font-family="Arial" font-size="14" fill="#64748b">Soalan: 10 | Dijawab: 4 | Betul: 3 | Salah: 1</text>
    
    <!-- Progress Bar -->
    <rect x="90" y="400" width="380" height="10" rx="5" ry="5" fill="#e2e8f0" />
    <rect x="90" y="400" width="152" height="10" rx="5" ry="5" fill="#2563eb" />
  </g>
</svg>